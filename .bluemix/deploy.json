{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "messages": {
        "$i18n": "locales.yml"
    },
    "title": {
        "$ref": "#/messages/deploy.title"
    },
    "description": {
        "$ref": "#/messages/deploy.description"
    },
    "longDescription": {
        "$ref": "#/messages/deploy.longDescription"
    },
    "type": "object",
    "properties": {
        "api-key": {
            "description": "The IBM Cloud API key is used to access the IBM Container Service API and interact with the cluster. You can obtain your API key with 'ibmcloud iam api-key-create' or via the console at https://cloud.ibm.com/iam#/apikeys by clicking **Create API key** (Each API key only can be viewed once).",
            "type": "string",
            "pattern": "\\S",
            "helper": {
                "type": "api-key"
            }
        },
        "registry-region": {
            "description": "The IBM Cloud region for image registry",
            "type": "string",
            "helper": {
                "type": "kube-region",
                "requires": ["api-key"]
            }
        },
        "registry-namespace": {
            "description": "The namespace in the container image registry. You can set it up with {ibmcloud cr namespace-add]. Learn more at https://cloud.ibm.com/docs/services/Registry/index.html .",
            "type": "string",
            "pattern": "^[a-z0-9][-_a-z0-9]{2,28}[a-z0-9]$",
            "helper": {
                "type": "kube-registry-namespace",
                "requires": ["registry-region"]
            }
        },
        "staging-region": {
            "description": "The IBM Cloud region",
            "type": "string",
            "helper": {
                "type": "cloud-foundry-region",
                "requires" : ["api-key"]
            }
        },
        "staging-organization": {
            "description": "The IBM Cloud org",
            "type": "string",
            "helper": {
                "type": "cloud-foundry-org",
                "requires": ["staging-region"]
            }
        },
        "staging-space": {
            "description": "The IBM Cloud space",
            "type": "string",
            "helper": {
                "type": "cloud-foundry-space",
                "requires": ["staging-organization"]
            }
        },
        "staging-cluster-name": {
            "description": "The name of staging cluster. Retrieve it with [ibmcloud cs clusters] or via the console at https://cloud.ibm.com/containers-kubernetes/clusters .",
            "type": "string",
            "pattern": "\\S",
            "helper": {
                "type": "kube-cluster-name",
                "requires": ["registry-region"]
            }
        },
        "staging-cluster-namespace": {
            "description": "Staging namespace",
            "type": "string",
            "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$",
            "helper": {
                "type": "kube-cluster-namespace",
                "requires": ["staging-cluster-name"],
                "validate": false
            }
        },
        "prod-region": {
            "description": "The IBM Cloud region for prod deployment",
            "type": "string",
            "helper": {
                "type": "cloud-foundry-region",
                "requires": ["api-key"]
            }
        },
        "prod-organization": {
            "description": "The IBM Cloud org",
            "type": "string",
            "helper": {
                "type": "cloud-foundry-org",
                "requires": ["prod-region"]
            }
        },
        "prod-space": {
            "description": "The IBM Cloud space",
            "type": "string",
            "helper": {
                "type": "cloud-foundry-space",
                "requires": ["prod-organization"]
            }
        },
        "prod-cluster-name": {
            "description": "The name of staging cluster. Retrieve it with [ibmcloud cs clusters] or via the console at https://cloud.ibm.com/containers-kubernetes/clusters .",
            "type": "string",
            "pattern": "\\S",
            "helper": {
                "type": "kube-cluster-name",
                "requires": ["registry-region"]
            }
        },
        "prod-cluster-namespace": {
            "description": "Prod namespace",
            "type": "string",
            "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$",
            "helper": {
                "type": "kube-cluster-namespace",
                "requires": ["prod-cluster-name"],
                "validate": false
            }
        },
        "umbrella-app-name": {
            "description": {
                "$ref": "#/messages/deploy.umbrellaAppDescription"
            },
            "type": "string",
            "pattern": "\\S",
            "maxLength": 63
        }
    },
    "required": [
        "api-key",
        "registry-region",
        "registry-namespace",
        "staging-region",
        "staging-organization",
        "staging-space",
        "staging-cluster-name",
        "staging-cluster-namespace",
        "prod-region",
        "prod-organization",
        "prod-space",
        "prod-cluster-name",
        "prod-cluster-namespace",
        "umbrella-app-name"
    ],
    "form": [{
            "type": "validator",
            "url": "/devops/setup/bm-helper/helper-v3.html"
        },
        {
            "type": "text",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.umbrellaAppName"
            },
            "key": "umbrella-app-name"
        },
        {
            "type": "password",
            "readonly": false,
            "title": "IBM Cloud API key",
            "key": "api-key"
        },
        {
            "type": "table",
            "columnCount": 3,
            "widths": ["50%", "3%", "47%"],
            "items": [{
                "type": "label",
                "title": "Container registry region"
            }, {
                "type": "label",
                "title": ""
            }, {
                "type": "label",
                "title": "Container registry namespace"
            }, {
                "type": "select",
                "title": "Container image registry region",
                "key": "registry-region"
            }, {
                "type": "label",
                "title": ""
            }, {
                "type": "select",
                "readonly": false,
                "title": "Container image registry namespace",
                "key": "registry-namespace"
            }]
        },
        {
            "type": "table",
            "columnCount": 4,
            "widths": [
                "15%",
                "28%",
                "28%",
                "28%"
            ],
            "items": [{
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/region"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/clusterName"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/clusterNamespace"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/testStage"
                    }
                },
                {
                    "type": "select",
                    "key": "staging-region"
                },
                {
                    "type": "select",
                    "key": "staging-cluster-name",
                    "readonly": false
                },
                {
                    "type": "select",
                    "key": "staging-cluster-namespace",
                    "readonly": false
                },
                {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": "Service CF org & space"
                },
                {
                    "type": "select",
                    "key": "staging-organization"
                },
                {
                    "type": "select",
                    "key": "staging-space",
                    "readonly": false
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/prodStage"
                    }
                },
                {
                    "type": "select",
                    "key": "prod-region"
                },
                {
                    "type": "select",
                    "key": "prod-cluster-name",
                    "readonly": false
                },
                {
                    "type": "select",
                    "key": "prod-cluster-namespace",
                    "readonly": false
                },
                {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": "Service CF org & space"
                },
                {
                    "type": "select",
                    "key": "prod-organization"
                },
                {
                    "type": "select",
                    "key": "prod-space",
                    "readonly": false
                }
            ]
        }, {
            "type": "table",
            "columnCount": 2,
            "widths": ["15%", "80%"],
            "items": [{
                "type": "label",
                "title": ""
            }, {
                "type": "label",
                "title": "Retrieve the Kubernetes cluster name with the CLI command 'ibmcloud cs clusters' or via the [console](https://cloud.ibm.com/containers-kubernetes/home/clusters)."
            }]
        }, {
            "type": "table",
            "columnCount": 2,
            "widths": ["15%", "80%"],
            "items": [{
                "type": "label",
                "title": ""
            }, {
                "type": "label",
                "title": "If the cluster namespace doesn't exist already, it will be automatically created and configured."
            }]
        }
    ]
}