{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "messages": {
        "$i18n": "locales.yml"
    },
    "title": {
        "$ref": "#/messages/deploy.title"
    },
    "description": {
        "$ref": "#/messages/deploy.description"
    },
    "longDescription": {
        "$ref": "#/messages/deploy.longDescription"
    },
    "type": "object",
    "properties": {
        "api-key": {
            "description": {
                "$ref": "#/messages/deploy.description"
            },
            "type": "string",
            "pattern": "\\S",
            "$validate": {
                "method": "validateApiKey",
                "params": {
                    "apiKey": "api-key"
                }
            }
        },
        "registry-region": {
            "description": {
                "$ref": "#/messages/deploy.registryRegionDescription"
            },
            "type": "string",
            "$validate": {
                "method": "validateCSRegion",
                "params": {
                    "apiKey": "api-key"
                }
            }
        },
        "registry-namespace": {
            "description": {
                "$ref": "#/messages/deploy.registrynsDescription"
            },
            "type": "string",
            "pattern": "^[a-z0-9][-_a-z0-9]{2,28}[a-z0-9]$",
            "$validate": {
                "method": "validateCSNameSpace",
                "params": {
                    "region": "registry-region",
                    "apiKey": "api-key"
                }
            }
        },
        "staging-region": {
            "description": {
                "$ref": "#/messages/deploy.region"
            },
            "type": "string",
            "$validate": {
                "method": "validateCSRegion",
                "params": {
                    "apiKey": "api-key"
                }
            }
        },
        "staging-resource-group": {
            "description": "Staging resource group",
            "type": "string",
            "pattern": "\\S",
            "$validate":{
              "method":"validateCSResourceGroup",
              "params":{"apiKey":"api-key"}
            }
        },  
        "staging-cluster-name": {
            "description": {
                "$ref": "#/messages/deploy.clusterNameDescription"
            },
            "type": "string",
            "pattern": "\\S",
            "$validate": {
                "method": "validateCSClusterName",
                "params": {
                    "region": "staging-region",
                    "apiKey": "api-key"
                }
            }
        },
        "staging-cluster-namespace": {
            "description": {
                "$ref": "#/messages/deploy.namespaceStageDescription"
            },
            "type": "string",
            "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$"
        },
        "prod-region": {
            "description": {
                "$ref": "#/messages/deploy.region"
            },
            "type": "string",
            "$validate": {
                "method": "validateCSRegion",
                "params": {
                    "apiKey": "api-key"
                }
            }
        },
        "prod-cluster-name": {
            "description": {
                "$ref": "#/messages/deploy.clusterNameDescription"
            },
           "type": "string",
            "pattern": "\\S",
            "$validate": {
                "method": "validateCSClusterName",
                "params": {
                    "region": "prod-region",
                    "apiKey": "api-key"
                }
            }
        },
        "prod-cluster-namespace": {
            "description": {
                "$ref": "#/messages/deploy.namespaceDescription"
            },
            "type": "string",
            "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$"
        },
        "umbrella-app-name": {
            "description": {
                "$ref": "#/messages/deploy.umbrellaAppDescription"
            },
            "type": "string",
            "pattern": "\\S",
            "maxLength": 63
        }
    },
    "required": [
        "api-key",
        "registry-region",
        "registry-namespace",
        "staging-region",
        "staging-resource-group",
        "staging-cluster-name",
        "staging-cluster-namespace",
        "prod-region",
        "prod-resource-group",
        "prod-cluster-name",
        "prod-cluster-namespace",
        "umbrella-app-name"
    ],
    "form": [{
            "type": "validator",
            "url": "/devops/setup/bm-helper/helper.html"
        },
        {
            "type": "text",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.umbrellaAppName"
            },
            "key": "umbrella-app-name"
        },
        {
            "type": "password",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.apikey"
            },
            "key": "api-key"
        },
        {
            "type": "label",
            "title": ""
        },
        {
            "type": "label",
            "title": "**Container image registry:**"
        },
        {
            "type": "table",
            "columnCount": 3,
            "widths": ["50%", "3%", "47%"],
            "items": [{
                "type": "label",
                "title": {
                    "$ref": "#/messages/deploy.containerregRegion"
                }
            }, {
                "type": "label",
                "title": ""
            }, {
                "type": "label",
                "title": {
                    "$ref": "#/messages/deploy.containerregns"
                }
            }, {
                "type": "select",
                "title": {
                    "$ref": "#/messages/deploy.imgregRegion"
                },
                "key": "registry-region",
                "options": {
                    "$populate": {
                        "method": "populateCSRegions",
                        "params": {
                            "apiKey": "api-key"
                        }
                    }
                }
            }, {
                "type": "label",
                "title": ""
            }, {
                "type": "select",
                "readonly": false,
                "title": {
                    "$ref": "#/messages/deploy.imgregNs"
                },
                "key": "registry-namespace",
                "options": {
                    "$populate": {
                        "method": "populateCSNameSpaces",
                        "params": {
                            "region": "registry-region",
                            "apiKey": "api-key"
                        }
                    }
                }
            }]
        },
        {
            "type": "label",
            "title": ""
        },
        {
            "type": "label",
            "title": "**Environments:**"
        },
        {
            "type": "table",
            "columnCount": 4,
            "widths": [
                "12%",
                "22%",
                "22%",
                "22%",
                "22%"
            ],
            "items": [{
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/region"
                    }
                },
                {
                    "type": "label",
                    "title": "Resource Group"
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/clusterName"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/clusterNamespace"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/testStage"
                    }
                },
                {
                    "type": "select",
                    "key": "staging-region",
                    "options": {
                        "$populate": {
                            "method": "populateCSRegions",
                            "params": {
                                "apiKey": "api-key"
                            }
                        }
                    }
                },
                {
                    "type": "select",
                    "key": "staging-resource-group"
                },  
                {
                    "type": "select",
                    "key": "staging-cluster-name",
                    "readonly": false,
                    "options": {
                        "$populate": {
                            "method": "populateCSClusterNames",
                            "params": {
                                "region": "staging-region",
                                "apiKey": "api-key"
                            }
                        }
                    }
                },
                {
                    "type": "text",
                    "key": "staging-cluster-namespace",
                    "readonly": false
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/prodStage"
                    }
                },
                {
                    "type": "select",
                    "key": "prod-region",
                    "options": {
                        "$populate": {
                            "method": "populateCSRegions",
                            "params": {
                                "apiKey": "api-key"
                            }
                        }
                    }
                },
                {
                    "type": "select",
                    "key": "prod-resource-group"
                },  
                {
                    "type": "select",
                    "key": "prod-cluster-name",
                    "readonly": false,
                    "options": {
                        "$populate": {
                            "method": "populateCSClusterNames",
                            "params": {
                                "region": "prod-region",
                                "apiKey": "api-key"
                            }
                        }
                    }
                },
                {
                    "type": "text",
                    "key": "prod-cluster-namespace",
                    "readonly": false
                }
            ]
        }, {
            "type": "table",
            "columnCount": 2,
            "widths": ["15%", "80%"],
            "items": [{
                "type": "label",
                "title": ""
            }, {
                "type": "label",
                "title": {
                    "$ref": "#/messages/deploy.clusterDescription"
                }
            }]
        }, {
            "type": "table",
            "columnCount": 2,
            "widths": ["15%", "80%"],
            "items": [{
                "type": "label",
                "title": ""
            }, {
                "type": "label",
                "title": {
                    "$ref": "#/messages/deploy.clusternsDescription"
                }
            }]
        }
    ]
}