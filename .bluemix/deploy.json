{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "messages": {
        "$i18n": "locales.yml"
    },
    "title": {
        "$ref": "#/messages/deploy.title"
    },
    "description": {
        "$ref": "#/messages/deploy.description"
    },
    "longDescription": {
        "$ref": "#/messages/deploy.longDescription"
    },
    "type": "object",
    "properties": {
        "api-key": {
            "description": "The IBM Cloud API key is used to access the IBM Container Service API and interact with the cluster. You can obtain your API key with 'ibmcloud iam api-key-create' or via the console at https://cloud.ibm.com/iam#/apikeys by clicking **Create API key** (Each API key only can be viewed once).",
            "type": "string",
            "pattern": "\\S",
            "validator": {
                "v-type": "api-key"
            }
        },
        "registry-region": {
            "description": "The IBM Cloud region for image registry",
            "type": "string",
            "validator": {
                "v-type": "k8-region",
                "params": ["api-key"]
            }
        },
        "registry-namespace": {
            "description": "The namespace in the container image registry. You can set it up with {ibmcloud cr namespace-add]. Learn more at https://cloud.ibm.com/docs/services/Registry/index.html .",
            "type": "string",
            "pattern": "^[a-z0-9][-_a-z0-9]{2,28}[a-z0-9]$",
            "validator": {
                "v-type": "k8-registry-namespace",
                "params": ["registry-region"]
            }
        },
        "staging-region": {
            "description": "The IBM Cloud region",
            "type": "string",
            "validator": {
                "v-type": "k8-region",
                "params": ["api-key"]
            }
        },
        "staging-organization": {
            "description": "The IBM Cloud org",
            "type": "string",
            "validator": {
                "v-type": "cf-org",
                "params": ["staging-region"]
            }
        },
        "staging-space": {
            "description": "The IBM Cloud space",
            "type": "string",
            "validator": {
                "v-type": "cf-space",
                "params": ["staging-organization"],
                "validate": false
            }
        },
        "staging-cluster-name": {
            "description": "The name of staging cluster. Retrieve it with [ibmcloud cs clusters] or via the console at https://cloud.ibm.com/containers-kubernetes/clusters .",
            "type": "string",
            "pattern": "\\S",
            "validator": {
                "v-type": "k8-cluster-name",
                "params": ["staging-region"]
            }
        },
        "staging-cluster-namespace": {
            "description": "Staging namespace",
            "type": "string",
            "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$"
        },
        "prod-region": {
            "description": "The IBM Cloud region for prod deployment",
            "type": "string",
            "validator": {
                "v-type": "k8-region",
                "params": ["api-key"]
            }
        },
        "prod-organization": {
            "description": "The IBM Cloud org",
            "type": "string",
            "validator": {
                "v-type": "cf-org",
                "params": ["prod-region"]
            }
        },
        "prod-space": {
            "description": "The IBM Cloud space",
            "type": "string",
            "validator": {
                "v-type": "cf-space",
                "params": ["prod-organization"],
                "validate": false
            }
        },
        "prod-cluster-name": {
            "description": "The name of staging cluster. Retrieve it with [ibmcloud cs clusters] or via the console at https://cloud.ibm.com/containers-kubernetes/clusters .",
            "type": "string",
            "pattern": "\\S",
            "validator": {
                "v-type": "k8-cluster-name",
                "params": ["prod-region"]
            }
        },
        "prod-cluster-namespace": {
            "description": "Prod namespace",
            "type": "string",
            "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$"
        },
        "umbrella-app-name": {
            "description": {
                "$ref": "#/messages/deploy.umbrellaAppDescription"
            },
            "type": "string",
            "pattern": "\\S",
            "maxLength": 63
        },
        "other-api-key": {
            "description": {
                "$ref": "#/messages/deploy.apikeyDescription"
            },
            "type": "string",
            "pattern": "\\S",
            "validator": {
                "v-type": "api-key"
            }
        },
        "other-registry-region": {
            "description": {
                "$ref": "#/messages/deploy.registryRegionDescription"
            },
            "type": "string",
            "disabled": false,
            "validator": {
                "v-type": "k8-region",
                "params": ["other-api-key"]
            }
        },
        "other-registry-namespace": {
            "description": {
                "$ref": "#/messages/deploy.registrynsDescription"
            },
            "type": "string",
            "pattern": "^[a-z0-9][-_a-z0-9]{2,28}[a-z0-9]$",
            "validator": {
                "v-type": "k8-registry-namespace",
                "params": ["other-registry-region"]
            }
        },
        "other-prod-region": {
            "description": {
                "$ref": "#/messages/deploy.regionDescription"
            },
            "type": "string",
            "disabled": false,
            "validator": {
                "v-type": "k8-region",
                "params": ["other-api-key"]
            }
        },
        "other-prod-resource-group": {
            "description": {
                "$ref": "#/messages/deploy.rgDescription"
            },
            "type": "string",
            "validator": {
                "v-type": "resource-group",
                "params": ["other-api-key"]
            }
        },
        "other-prod-cluster-name": {
            "description": {
                "$ref": "#/messages/deploy.clusterNameDescription"
            },
            "type": "string",
            "pattern": "\\S",
            "validator": {
                "v-type": "k8-cluster-name",
                "params": ["other-prod-region", "other-prod-resource-group"]
            }
        },
        "other-prod-cluster-namespace": {
            "description": {
                "$ref": "#/messages/deploy.namespaceDescription"
            },
            "type": "string",
            "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$"
        }
    },
    "required": [
        "api-key",
        "registry-region",
        "registry-namespace",
        "staging-region",
        "staging-organization",
        "staging-space",
        "staging-cluster-name",
        "staging-cluster-namespace",
        "prod-region",
        "prod-organization",
        "prod-space",
        "prod-cluster-name",
        "prod-cluster-namespace",
        "umbrella-app-name",
        "other-prod-cluster-namespace",
        "other-prod-cluster-name",
        "other-prod-resource-group",
        "other-prod-region",
        "other-registry-namespace",
        "other-registry-region",
        "other-api-key"
    ],
    "form": [{
            "type": "validator",
            "url": "/devops/setup/bm-helper/validator-v1.html"
        },
        {
            "type": "text",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.umbrellaAppName"
            },
            "key": "umbrella-app-name"
        },
        {
            "type": "password",
            "readonly": false,
            "title": "IBM Cloud API key",
            "key": "api-key"
        },
        {
            "type": "table",
            "columnCount": 3,
            "widths": ["50%", "3%", "47%"],
            "items": [{
                "type": "label",
                "title": "Container registry region"
            }, {
                "type": "label",
                "title": ""
            }, {
                "type": "label",
                "title": "Container registry namespace"
            }, {
                "type": "select",
                "title": "Container image registry region",
                "key": "registry-region"
            }, {
                "type": "label",
                "title": ""
            }, {
                "type": "select",
                "readonly": false,
                "title": "Container image registry namespace",
                "key": "registry-namespace"
            }]
        },
        {
            "type": "table",
            "columnCount": 4,
            "widths": [
                "15%",
                "28%",
                "28%",
                "28%"
            ],
            "items": [{
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/region"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/clusterName"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/clusterNamespace"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/testStage"
                    }
                },
                {
                    "type": "select",
                    "key": "staging-region"
                },
                {
                    "type": "select",
                    "key": "staging-cluster-name",
                    "readonly": false
                },
                {
                    "type": "select",
                    "key": "staging-cluster-namespace",
                    "readonly": false
                },
                {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": "Service CF org & space"
                },
                {
                    "type": "select",
                    "key": "staging-organization"
                },
                {
                    "type": "select",
                    "key": "staging-space",
                    "readonly": false
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/prodStage"
                    }
                },
                {
                    "type": "select",
                    "key": "prod-region"
                },
                {
                    "type": "select",
                    "key": "prod-cluster-name",
                    "readonly": false
                },
                {
                    "type": "select",
                    "key": "prod-cluster-namespace",
                    "readonly": false
                },
                {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": "Service CF org & space"
                },
                {
                    "type": "select",
                    "key": "prod-organization"
                },
                {
                    "type": "select",
                    "key": "prod-space",
                    "readonly": false
                }
            ]
        }, {
            "type": "password",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.apikey"
            },
            "key": "other-api-key"
        }, {
            "type": "table",
            "columnCount": 3,
            "widths": ["50%", "3%", "47%"],
            "items": [{
                "type": "label",
                "title": {
                    "$ref": "#/messages/deploy.containerregRegion"
                }
            }, {
                "type": "label",
                "title": ""
            }, {
                "type": "label",
                "title": {
                    "$ref": "#/messages/deploy.containerregns"
                }
            }, {
                "type": "select",
                "title": {
                    "$ref": "#/messages/deploy.imgregRegion"
                },
                "key": "other-registry-region"
            }, {
                "type": "label",
                "title": ""
            }, {
                "type": "select",
                "readonly": false,
                "title": {
                    "$ref": "#/messages/deploy.imgregNs"
                },
                "key": "other-registry-namespace"
            }]
        }, {
            "type": "table",
            "columnCount": 7,
            "widths": ["24%", "2%", "24%", "3%", "23%", "1%", "23%"],
            "items": [{
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/region"
                    }
                }, {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/deploy.rg"
                    }
                }, {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/deploy.cluster"
                    }
                }, {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/deploy.clusterNs"
                    }
                }, {
                    "type": "select",
                    "key": "other-prod-region"
                }, {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "select",
                    "key": "other-prod-resource-group",
                    "readonly": false
                }, {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "select",
                    "key": "other-prod-cluster-name",
                    "readonly": false
                }, {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "text",
                    "key": "other-prod-cluster-namespace",
                    "readonly": false
                }
            ]
        }
    ]
}